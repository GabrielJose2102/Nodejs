{{#if sidebar.comments}}
  <div class="card mt-2">
    <div class="card-header bg-dark text-white">
      <h5><i class="fas fa-comments"></i> Ãšltimos comentarios</h5>
    </div>
    <div class="card-body">
      <div class="row">
        {{#each sidebar.comments}}
          <div class="row mb-2 lastest-comments">
            <div class="col">
              <a href="/images/{{image.uniqueId}}">
                <img src="/public/upload/{{image.filename}}" alt="" class="w-100 h-100 image-thumbnail"/>
              </a>
            </div>
            <div class="col">
                <blockquote class="w-100">
                    <p>{{comment}}</p>
                    <footer class="blockquote-footer">
                        <span>{{name}}</span>
                        <span>{{timeago timestamp}}</span>
                    </footer>
                </blockquote>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
{{/if}}